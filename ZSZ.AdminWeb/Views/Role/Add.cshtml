@model ZSZ.DTO.PermissionDTO[]
@{
    ViewBag.Title = "Add";
}

<form class="form form-horizontal" id="addForm">
    <div class="row cl">
        <label class="form-label col-xs-4 col-sm-3"><span class="c-red">*</span>名称：</label>
        <div class="formControls col-xs-8 col-sm-9">
            <input type="text" class="input-text" value="" placeholder="" minlength="1" maxlength="50" id="name" name="name" required>
        </div>
    </div>
    <label class="form-label col-xs-4 col-sm-3"><span class="c-red">*</span>权限列表：</label>
    <div class="row cl">

        @foreach (var permission in Model)
        {
            <div class=" col-xs-4 col-sm-3">
                <input type="checkbox" class="check-box" value="@permission.Id" id="PermissionIds_@permission.Id" name="PermissionIds">
                <label for="PermissionIds_@permission.Id" class="form-label">@permission.Name</label>
            </div>
        }

    </div>
    <div class="row cl">
        <div class="col-xs-8 col-sm-9 col-xs-offset-4 col-sm-offset-3">
            <input class="btn btn-primary radius" type="button" id="saveBtn" value="&nbsp;&nbsp;提交&nbsp;&nbsp;">
        </div>
    </div>
</form>
@section FooterScript
{
    <script>
        $.validator.setDefaults({
            submitHandler: function () {
                alert("提交事件!");
            }
        });
        $(function () {
            $("#saveBtn").click(function () {
                var formData = $("#addForm").serializeArray();
                $.ajax({
                    url: "/Role/Add",
                    type: "post",
                    data: formData,
                    dataType: "json",
                    success: function (res) {
                        if (res.status == "ok") {
                            parent.location.reload();
                        } else {
                            alert("error");
                        }
                    },
                    error: function (res) {
                        alert("内部错误");
                    }
                });
            });

        });
    </script>
}