@model ZSZ.DTO.HouseDTO[]
@{
    ViewBag.Title = "List";
}


<nav class="breadcrumb">
    <i class="Hui-iconfont">&#xe67f;</i> 首页
    <span class="c-gray en">&gt;</span>
    房源管理
    <span class="c-gray en">&gt;</span>
    房源列表 <a class="btn btn-success radius r" style="line-height:1.6em;margin-top:3px" href="javascript:location.replace(location.href);" title="刷新"><i class="Hui-iconfont">&#xe68f;</i></a>
</nav>
<div class="Hui-article">
    <article class="cl pd-20">

        <div class="cl pd-5 bg-1 bk-gray mt-20">
            <span class="l"> <a href="javascript:;" onclick="batch_del()" class="btn btn-danger radius"><i class="Hui-iconfont">&#xe6e2;</i> 批量删除</a> <a href="javascript:;" onclick="house_add('添加房源','/House/Add','800','500')" class="btn btn-primary radius"><i class="Hui-iconfont">&#xe600;</i> 添加房源</a> </span>
            <span class="r">共有数据：<strong>@Model.Length</strong> 条</span>
        </div>
        <form id="listForm">
            <table class="table table-border table-bordered table-bg">
                <thead>
                    <tr>
                        <th scope="col" colspan="9">房源列表</th>
                    </tr>
                    <tr class="text-c">
                        <th width="25"><input type="checkbox" name="" value=""></th>
                        <th width="150">区域</th>
                        <th width="150">小区名</th>
                        <th width="150">地段</th>
                        <th width="100">租金</th>
                        <th width="150">房型</th>
                        <th width="100">平米</th>
                        <th width="100">是否精装</th>
                        <th width="100">操作</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var house in Model)
                    {
                        <tr class="text-c">
                            <td><input type="checkbox" value="@house.Id" name="selectIds"></td>
                            <td>@house.RegionName</td>
                            <td>@house.CommunityName</td>
                            <td>@house.CommunityLocation</td>
                            <td>@house.MonthRent</td>
                            <td>@house.TypeName</td>
                            <td>@house.Area</td>
                            <td>@house.DecorateStatusName</td>
                            <td class="td-manage">
                                <a title="编辑" href="javascript:;" onclick="house_edit('房源编辑','/House/Edit/@house.Id','800','500')" class="ml-5" style="text-decoration:none"><i class="Hui-iconfont">&#xe6df;</i></a>
                                <a title="删除" href="javascript:;" onclick="house_del(this,'@house.Id')" class="ml-5" style="text-decoration:none"><i class="Hui-iconfont">&#xe6e2;</i></a>
                                <a title="查看配图" href="javascript:;" onclick="layer_show('查看配图','/House/PicList/@house.Id','800','500')" class="ml-5" style="text-decoration:none"><i class="Hui-iconfont">&#xe613;</i></a>
                                <a title="上传配图" href="javascript:;" onclick="layer_show('上传配图','/House/PicUpload?houseId=@house.Id','800','500')" class="ml-5" style="text-decoration:none"><i class="Hui-iconfont">&#xe642;</i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </form>
    </article>
</div>


@section FooterScript
{
    <script type="text/javascript">
        /*
            参数解释：
            title	标题
            url		请求的url
            w		弹出层宽度（缺省调默认值）
            h		弹出层高度（缺省调默认值）
        */
        /*管理员-增加*/
        function house_add(title, url, w, h) {
            layer_show(title, url, w, h);
        }
        function batch_del() {
            layer.confirm("确定要批量删除这些数据吗", function () {

                var formData = $("#listForm").serializeArray();
                $.ajax({
                    url: "/House/BatchDelete",
                    data: formData,
                    type: "post",
                    dataType: "json",
                    success: function (res) {
                        if (res.status == "ok") {
                            layer.msg('已删除!', { icon: 1, time: 1000 });
                            location.reload();
                        } else if (res.status == "redirect") {
                            location.href = res.data;
                        } else if (res.status == "error") {
                            alert(res.errorMsg);
                        } else {
                            layer.msg('删除失败!', { icon: 2, time: 1000 });
                        }
                    },
                    error: function () {
                        alert("请求出错");
                    }
                });
            });
        }
        /*管理员-删除*/
        function house_del(obj, id) {
            layer.confirm('确认要删除吗？', function (index) {
                //此处请求后台程序，下方是成功后的前台处理……
                $.ajax({
                    url: "/House/Delete",
                    type: "post",
                    data: { id: id },
                    dataType: "json",
                    success: function (res) {
                        if (res.status == "ok") {
                            $(obj).parents("tr").remove();
                            layer.msg('已删除!', { icon: 1, time: 1000 });
                        } else if (res.status == "redirect") {
                            location.href = res.data;
                        } else if (res.status == "error") {
                            alert(res.errorMsg);
                        } else {
                            layer.msg('删除失败!', { icon: 2, time: 1000 });
                        }
                    }
                });

            });
        }
        /*管理员-编辑*/
        function house_edit(title, url, w, h) {
            layer_show(title, url, w, h);
        }
    </script>
}




